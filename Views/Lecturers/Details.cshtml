@model BitcubeEval.Models.Lecturer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Lecturer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        @if (Model.Degrees != null)
        {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Degrees)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Degree Name</th>
                    <th>Degree Duration (Years)</th>
                </tr>
                @foreach (var item in Model.Degrees)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DegreeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DegreeDuration)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
