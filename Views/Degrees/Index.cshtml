@model IEnumerable<BitcubeEval.Models.Degree>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DegreeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DegreeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DegreeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DegreeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
